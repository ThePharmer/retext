# Retext Configuration
# Copy this file to .env and fill in values

# REQUIRED: Password hash for authentication
# Generate with: python -c "from werkzeug.security import generate_password_hash; print(generate_password_hash('your-password'))"
PASSWORD_HASH=

# REQUIRED: Secret key for Flask sessions
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=

# OPTIONAL: Server binding (default: 127.0.0.1:5000)
HOST=127.0.0.1
PORT=5000

# OPTIONAL: URL prefix for reverse proxy deployment (e.g., /retext)
# Leave empty for root deployment
APPLICATION_ROOT=

# OPTIONAL: Directory for database file (default: current directory)
# The messages.db file will be created in this directory
DATA_DIR=
